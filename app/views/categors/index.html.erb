<p id="notice"><%= notice %></p>

<h1>Listing Categors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categors.each do |categor| %>
      <tr>
        <td><%= categor.name %></td>
        <td><%= categor.description %></td>
        <td><%= link_to 'Show', categor %></td>
        <td><%= link_to 'Edit', edit_categor_path(categor) %></td>
        <td><%= link_to 'Destroy', categor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

